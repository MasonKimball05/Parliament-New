{% extends "base.html" %}

{% block title %}Chapter Documents{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <h2 class="text-3xl font-bold mb-2">Chapter Documents</h2>
        <p class="text-gray-600">Documents published by committees for all chapter members</p>
        {% if total_documents %}
            <p class="text-sm text-gray-500 mt-1">{{ total_documents }} document{{ total_documents|pluralize }} available</p>
        {% endif %}
    </div>

    <div class="space-y-4">
        {% if documents_by_committee %}
            {% for committee, documents in documents_by_committee %}
                <details class="bg-white rounded-lg shadow-md overflow-hidden" open>
                    <summary class="bg-blue-50 px-6 py-4 cursor-pointer hover:bg-blue-100 transition">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center space-x-3">
                                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                                </svg>
                                <span class="text-lg font-semibold text-gray-900">{{ committee.name }}</span>
                                <span class="text-sm text-gray-500">({{ committee.code }})</span>
                            </div>
                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">
                                {{ documents|length }} document{{ documents|length|pluralize }}
                            </span>
                        </div>
                    </summary>

                    <div class="px-6 py-4">
                        <div class="space-y-3">
                            {% for doc in documents %}
                                <div class="border-b pb-3 last:border-b-0 last:pb-0">
                                    <div class="flex justify-between items-start">
                                        <div class="flex-1">
                                            <h3 class="text-base font-semibold text-gray-900">
                                                <a href="{{ doc.document.url }}" target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center">
                                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                                    </svg>
                                                    {{ doc.title }}
                                                </a>
                                            </h3>
                                            {% if doc.description %}
                                                <p class="text-gray-600 text-sm mt-1 ml-6">{{ doc.description }}</p>
                                            {% endif %}
                                            <div class="text-xs text-gray-500 mt-1 ml-6">
                                                Uploaded by {{ doc.uploaded_by.name }} on {{ doc.uploaded_at|date:"M d, Y" }}
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <a href="{{ doc.document.url }}" download class="text-blue-600 hover:text-blue-800 text-sm flex items-center">
                                                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                                                </svg>
                                                Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </details>
            {% endfor %}
        {% else %}
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <p class="text-gray-500 text-lg">No chapter documents have been published yet.</p>
                <p class="text-gray-400 text-sm mt-2">Committee chairs can publish documents to make them available here.</p>
            </div>
        {% endif %}
    </div>
</div>

<style>
    details[open] summary {
        border-bottom: 1px solid #e5e7eb;
    }

    details summary::-webkit-details-marker {
        display: none;
    }

    details summary::before {
        content: 'â–¶';
        display: inline-block;
        margin-right: 0.5rem;
        transition: transform 0.2s;
    }

    details[open] summary::before {
        transform: rotate(90deg);
    }
</style>
{% endblock %}
