# Parliament Django Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-django-get-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=parliament_db
DB_USER=parliament_user
DB_PASSWORD=your-secure-password-here
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000

# Logging
LOG_LEVEL=INFO

# Timezone
TIME_ZONE=America/Chicago

# Application Settings
PARLIAMENT_CHAPTER_NAME=Your Chapter Name
PARLIAMENT_ORGANIZATION=Your Organization Name
